<Page x:Class="PcApp.View.reviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PcApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="reviewPage">

    <Grid>
        <DataGrid x:Name="dtGrid" HorizontalAlignment="Left" Height="398" VerticalAlignment="Top" Width="388" Margin="392,21,0,0" BorderBrush="{x:Null}" ItemsSource="{Binding}" SelectionChanged="dtGrid_SelectionChanged"/>
        <TextBox x:Name="reviewid" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Margin="180,49,0,0"/>
        <TextBox x:Name="reviewtext" HorizontalAlignment="Left" Height="288" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Margin="180,91,0,0"/>
        <Label Content="회원아이디" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,49,0,0" Height="23" Width="72"/>
        <Label Content="리뷰" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,87,0,0" Height="23" Width="72"/>
        <Button Content="제품목록" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Page>
